<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zoo_E4.Vues.Soins.PageDetailSoins">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblSoins" FontSize="24" HorizontalOptions="Center"/>
            <Editor x:Name="EditorDescriptif" MaxLength="1000" Placeholder="Descriptif du Soins" AutoSize="TextChanges"/>
            <DatePicker x:Name="DatePickerSoins" DateSelected="DatePicker_DateSelected"/>
            <Label Text="Poids (en Kg )"/>
            <Entry x:Name="EntryPoids" Placeholder="Poids de l'animal"/>
            <Button Text="Mettre à jour" Clicked="ButtonUpdateSoins_Clicked" BackgroundColor="YellowGreen"/>
            <Button Text="Supprimer Soins" Clicked="ButtonDeleteSoins_Clicked" BackgroundColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>